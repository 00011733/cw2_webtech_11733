extends layout.pug 

block content 
    .row.pt-3
        if deleted 
            p.alert.alert-danger.d-flex.justify-content-between.align-items-center
                span Successfully Deleted!
                i.fa-solid.fa-xmark.close
        if updated 
            p.alert.alert-success
            span Successfully Updated!
            i.fa-solid.fa-xmark.close
        if id
            p.alert.alert-primary 
            span Successfully Created!
            i.fa-solid.fa-xmark.close
    h1.text-center.border-bottom.py-2 All Goals
    .row.my-4
        if (goals.length)
            each goal in goals
                .col-12.col-xl-3.col-lg-4.col-md-6.mb-4
                    .card
                        if cats
                            h6.card-header= cats[goal.category] 
                        .card-body
                            h5.card-title= goal.title
                            p.card-text.text-break= goal.description 
                            
                        .card-footer.d-flex.justify-content-end 
                            a.mx-2.text-secondary(href=`/update/${ goal.id }`)
                                i.fa-solid.fa-pen-to-square.update
                            a.mx-2.text-secondary.alert-btn(href=`/deleteGoal/${ goal.id }`)
                                i.fa-solid.fa-trash.delete
        else 
            p.alert.alert-warning No Goals Available
            a.col-12.btn.btn-primary(href='/createNew') New Goal
                
